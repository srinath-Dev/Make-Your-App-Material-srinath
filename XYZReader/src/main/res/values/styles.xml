<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="ToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/theme_primary_dark</item>
    </style>

    <!-- Collapsing Toolbar Title -->
    <style name="exp_toolbar_title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@color/ltgray</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="exp_toolbar_title_small" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/ltgray</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="coll_toolbar_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/ltgray</item>
    </style>

    <!-- Main paragraphs text -->
    <style name="mainText" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textColorLink">@color/theme_accent</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:layout_marginLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:layout_marginRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:paddingBottom">@dimen/detail_body_bottom_margin</item>
        <item name="android:lineSpacingMultiplier">@fraction/detail_body_line_spacing_multiplier</item>
    </style>

</resources>
